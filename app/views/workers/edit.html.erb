<%= simple_form_for @worker do |f| %>
  <%= f.input :first_name, label:"Nombre:",  required: true %>
  <%= f.input :last_name, label:"Apellidos:", required: true %>
  <%= f.input :birth_date, label:"Fecha de nacimineto:", as: :date, html5: true, required: true %>
  <%= f.input :start_date, label:"Fecha de alta:", as: :date,html5: true, required: true %>
  <%= f.association :department, label_method: :name_of_department, value_method: :id, prompt: 'Seleccionar', label:'Departamento:',  required: true %>
  <%= f.input :sin_num, label:"Número SSSS:", input_html: {pattern:"^[0-9]{1,45}$", title:"Sólo se aceptan carácteres númericos."},  required: true%>
  <%= f.input :personal_email, label:"Email personal:",  required: true %>
  <%= f.input :ga_email, label:"Email Global Alumni:", input_html: {pattern:"^[a-zA-Z0-9_.+-]+@(?:(?:[a-zA-Z0-9-]+\.)?[a-zA-Z]+\.)?(globalalumni)\.org$", title:"Debe contener @globalalumni.org y no tener tildes."},  required: true %>
  <%= f.input :id_num, label:"Número de DNI:", input_html: {pattern:"([A-Z]|[0-9])[0-9]{7}([A-Z])", title:"Formato válido: 11111111X o Z1150913K"},  required: true %>
  <%= f.association :type_of_contract, label_method: :name_type_of_contract, value_method: :id, prompt: 'Seleccionar', label:'Tipo de contrato:',  required: true%>
  <%= f.association :genre, label_method: :type_of_genre, value_method: :id, prompt: 'Seleccionar', label:"Seleccionar género:",  required: true%>
  <%= f.input :phone_number, label:"Numero de teléfono:", input_html: {pattern:"(6|7)([0-9]){8}", title:"Formato válido: 6xxxxxxxx ó 7xxxxxxxx, sólo se aceptan carácteres númericos."},  required: true %>
  <%= f.input :bank_account, label:"Número de Cuenta Corriente:", input_html: {pattern:"([A-Z]{2})([0-9]{22})", title:"Formato válido: Dos letras + 22 números, sin espacion en blanco."},  required: true %>
  <%= f.association :type_of_shift, label_method: :name_of_shift, value_method: :id, prompt: 'Seleccionar', label:'Tipo de jornada:',  required: true%>
  <%= f.association :position, label_method: :name_of_position, value_method: :id, prompt: 'Seleccionar', label:'Posición:'%>
  <%= f.association :group, label_method: :type_of_group, value_method: :id, prompt: 'Seleccionar', label:'Grupo:',  required: true%>
  <%= f.association :level, label_method: :type_of_level, value_method: :id, prompt: 'Seleccionar', label:'Nivel:',  required: true%>
  <%= f.association :area, label_method: :type_of_area, value_method: :id, prompt: 'Seleccionar', label:'Área:',  required: true%>
  <%=  f.input :trial_period, collection: [['1', '1 Mes'],['3', '3 Meses'], ['4', '4 Meses'], ['6', '6 Meses']], label_method: :second, value_method: :first, prompt: 'Seleccionar', label:'Periodo de pruebas:',  required: true %>
  <%= f.input :notice_period, label:"Periodo de preaviso:", input_html: {pattern:"^[0-9]{1,45}$", title:"Sólo se aceptan carácteres númericos."} %>
  <%= f.input :annual_salary, label:"Salario bruto anual (en €):", input_html: {type:'text', pattern:"^[0-9]*$", title:'Sólo se admiten caratéres numéricos'},  required: true %>
  <%= f.file_field :avatar,  label:"Foto:", accept:'image/png, image/jpg' %>
  <%= f.file_field :files,  label:"Documentación:", multiple: true %>
  <%= f.submit t('components.buttons.update') %>
<% end %>

<%= simple_form_for @worker do |f| %>
  <%= f.input :first_name, label:t('model.columns.first_name'),  required: true %>
  <%= f.input :last_name, label:t('model.columns.last_name'), required: true %>
  <%= f.input :birth_date, label:t('model.columns.birthday'), as: :date, html5: true, required: true %>
  <%= f.input :start_date, label:t('model.columns.start_date'), as: :date,html5: true, required: true %>
  <%= f.association :department, label_method: :name_of_department, value_method: :id, prompt: t('components.buttons.select'), label:t('model.columns.department'),  required: true %>
  <%= f.input :sin_num, label:t('model.columns.sin_num'), input_html: {pattern:"^[0-9]{1,45}$", title:"Sólo se aceptan carácteres númericos."},  required: true%>
  <%= f.input :personal_email, label:t('model.columns.personal_email'),  required: true %>
  <%= f.input :ga_email, label:t('model.columns.company_email'), input_html: {pattern:"^[a-zA-Z0-9_.+-]+@(?:(?:[a-zA-Z0-9-]+\.)?[a-zA-Z]+\.)?(globalalumni)\.org$", title:"Debe contener @globalalumni.org y no tener tildes."},  required: true %>
  <%= f.input :id_num, label:t('model.columns.id_num'), input_html: {pattern:"([A-Z]|[0-9])[0-9]{7}([A-Z])", title:"Formato válido: 11111111X o Z1150913K"},  required: true %>
  <%= f.association :type_of_contract, label_method: :name_type_of_contract, value_method: :id, prompt: t('components.buttons.select'), label:t('model.columns.contract'),  required: true%>
  <%= f.association :genre, label_method: :type_of_genre, value_method: :id, prompt: t('components.buttons.select'), label:t('model.columns.genre'),  required: true%>
  <%= f.input :phone_number, label:t('model.columns.phone_num'), input_html: {pattern:"(6|7)([0-9]){8}", title:"Formato válido: 6xxxxxxxx ó 7xxxxxxxx, sólo se aceptan carácteres númericos."},  required: true %>
  <%= f.input :bank_account, label:t('model.columns.bank_account'), input_html: {pattern:"([A-Z]{2})([0-9]{22})", title:"Formato válido: Dos letras + 22 números, sin espacion en blanco."},  required: true %>
  <%= f.association :type_of_shift, label_method: :name_of_shift, value_method: :id, prompt: t('components.buttons.select'), label:t('model.columns.shift'),  required: true%>
  <%= f.association :position, label_method: :name_of_position, value_method: :id, prompt: t('components.buttons.select'), label:t('model.columns.position')%>
  <%= f.association :group, label_method: :type_of_group, value_method: :id, prompt: t('components.buttons.select'), label:t('model.columns.group'),  required: true%>
  <%= f.association :level, label_method: :type_of_level, value_method: :id, prompt: t('components.buttons.select'), label: t('model.columns.level'),  required: true%>
  <%= f.association :area, label_method: :type_of_area, value_method: :id, prompt: t('components.buttons.select'), label:t('model.columns.area'),  required: true%>
  <%=  f.input :trial_period, collection: [['1', '1 Mes'],['3', '3 Meses'], ['4', '4 Meses'], ['6', '6 Meses']], label_method: :second, value_method: :first, prompt: t('components.buttons.select'), label:t('model.columns.trial_period'),  required: true %>
  <%= f.input :notice_period, label:t('model.columns.notice_period'), input_html: {pattern:"^[0-9]{1,45}$", title:"Sólo se aceptan carácteres númericos."} %>
  <%= f.input :annual_salary, label:t('model.columns.salary'), input_html: {type:'text', pattern:"^[0-9]*$", title:'Sólo se admiten caratéres numéricos'},  required: true %>
  <%= f.file_field :avatar,  label:t('model.columns.avatar'), accept:'image/png, image/jpg' %>
  <%= f.file_field :files,  label:t('model.columns.documents'), multiple: true %>
  <%= f.submit t('components.buttons.add')  %>
<% end %>

<%= simple_form_for [ @worker, @permission ] do |f| %>
    <%= f.input :permission_start_date,label:t('model.columns.start_date_permission'), required: true, as: :date,html5: true  %>
    <%= f.input :permission_rejoin_date, label:t('model.columns.rejoin_date_permission'),required: true, as: :date,html5: true %>
  <%= f.association :type_of_permission, label_method: :name_of_permission, value_method: :id, prompt: t('components.buttons.select'), label:t('model.columns.type_of_permission'), required: true%>
  <%= f.input :note, label:t('model.columns.note_permission') %>
  <%= f.input :comment, label:'Añadir comentario:', required: true %>
  <%#= f.file_field :note_file,  label:"Documentación:" %>
  <%= f.submit t('components.buttons.update') %>
<% end %>

  <%= f.input :rejoin_date_sickness, label: t('model.columns.rejoin_date_sickness'), required: true, as: :date,html5: true %>
  <%= f.input :type_of_sickness,label: t('model.columns.type_of_sickness'), collection: [["Por enfermedad", ['IT', 'Accidente laboral']], ['Otros',['Maternidad/Paternidad']]],
                  as: :grouped_select, group_method: :last, required: true  %>
  <%= f.input :doctor_note_sickeness, label: t('model.columns.doctor_note') %>
  <%= f.input :rejoin_note_sickeness, label: t('model.columns.rejoin_note')%>
  <%= f.input :comment, label: t('model.columns.comment'), required: true %>
  <%#= f.file_field :note_file,  label:"DocumentaciÃ³n:" %>
  <%= f.submit t('components.buttons.add') %>
<% end %>
